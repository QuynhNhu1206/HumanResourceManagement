<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Css/styleAdmin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Thêm Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <!-- Thêm Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <title>HOÀNG DIỆU SCHOOL</title>
</head>

<body>

    <header id="main-header">
        <div class="container-fluid">
            <div class="row">
                <div id="top-nav-bar" class="d-flex justify-content-between align-items-center">
                    <div class="col-3 d-flex align-items-center">
                        <img src="~/Content/img/cute.jpg" alt="Avatar" class="rounded-circle">
                        <label for="">Hoàng Diệu</label>
                    </div>
                    <div class="col-4">
                        <div id="tnb-google-search-container">
                            <div id="tnb-google-search-inner-container">
                                <input id="tnb-google-search-input" type="text" placeholder="Search..."
                                       autocomplete="off">
                                <div id="tnb-google-search-submit-btn" class="tnb-button-light">
                                    <svg id="tnb-google-search-icon" viewBox="0 0 17 16" fill="none"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M11.8153 10.3439C12.6061 9.2673 13.0732 7.9382 13.0732 6.5C13.0732 2.91015 10.163 0 6.57318 0C2.98333 0 0.0731812 2.91015 0.0731812 6.5C0.0731812 10.0899 2.98333 13 6.57318 13C8.01176 13 9.3412 12.5327 10.4179 11.7415L10.4171 11.7422C10.4466 11.7822 10.4794 11.8204 10.5156 11.8566L14.3661 15.7071C14.7566 16.0976 15.3898 16.0976 15.7803 15.7071C16.1708 15.3166 16.1708 14.6834 15.7803 14.2929L11.9298 10.4424C11.8936 10.4062 11.8553 10.3734 11.8153 10.3439ZM12.0732 6.5C12.0732 9.53757 9.61075 12 6.57318 12C3.53561 12 1.07318 9.53757 1.07318 6.5C1.07318 3.46243 3.53561 1 6.57318 1C9.61075 1 12.0732 3.46243 12.0732 6.5Z"
                                              fill="black"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-5 nav-container">
                        <img src="~/Content/img/Vectormail.png" alt="Mail Icon" class="nav-icon">
                        <img src="~/Content/img/mdi_bell-outline.png" alt="Notification Icon" class="nav-icon">
                        <div class="user-profile">
                            <div class="user-info" id="userProfile">
                                <span class="user-name">@ViewBag.UserName</span>

                                <p class="user-detail">Xem hồ sơ chi tiết</p>
                            </div>
                            <img src="~/Content/img/cute.jpg" alt="Avatar" class="user-avatar" id="userAvatar">
                            <div class="dropdown-panel" id="dropdownPanel">
                                <ul>
                                    <li>
                                        <a href="/MyHome/UpdateInfo">
                                            <i class="fa-solid fa-user icon"></i> Hồ sơ cá nhân
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa-solid fa-question-circle icon"></i> Trợ giúp và hỗ trợ
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa-solid fa-comment icon"></i> Đóng góp ý kiến
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa-solid fa-unlock icon"></i> Quên mật khẩu
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa-solid fa-key icon"></i> Thay đổi mật khẩu
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa-solid fa-cog icon"></i> Cài đặt
                                        </a>
                                    </li>
                                </ul>
                                <div class="logout-item">
                                    <a href="@Url.Action("Logout", "MyHome")">
                                        <i class="fa-solid fa-sign-out-alt icon"></i> Đăng xuất
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="d-flex dashboard">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="welcome-message">
                <h2>Xin chào,</h2>
                <span class="highlight">@ViewBag.ShortName!</span>
                <p class="update-info">Đã cập nhật gần đây nhất</p>
            </div>
            <ul>
                <li class="nav-item">
                    <a class="nav-link" href="/MyHome/myhome">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Nhanvien/Nhanvien">Nhân viên</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Phongban/phongban">Phòng ban</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Hopdong/hopdong">Hợp đồng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Lịch làm việc</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Luong/Luong">Lương</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Bảo hiểm</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Quản lý tài khoản</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Báo cáo thống kê</a>
                </li>
            </ul>

        </aside>

    </div>
    <div class="main-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/admin")

</body>
</html>