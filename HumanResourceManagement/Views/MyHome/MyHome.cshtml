
@{
    ViewBag.Title = "MyHome";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    
}
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Css/stylemyhome.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
   

    <title>HOÀNG DIỆU SCHOOL</title>
</head>
<div class="main-container">
    <section class="resource-management">
        <div class="info-box">
            <h1>QUẢN LÝ NGUỒN LỰC CỦA BẠN<br>THEO CÁCH CHUYÊN NGHIỆP NHẤT</h1>
            <p>HD - Chuyên Nghiệp - Tiện Lợi - An Toàn</p>
            <button class="explore-button">Khám phá ngay</button>
        </div>
        <div class="illustration">
            <img src="~/Content/img/anhmyhome.png" alt="Illustration" class="illustration-image">
        </div>
    </section>

    <section class="sections-row">
        <!-- Nhân viên tiêu biểu -->
        <div class="highlighted-employees">
            <h3>Nhân viên tiêu biểu</h3>
            <div class="panel-employeedetail">
                <div class="employee-info">
                    <img src="~/Content/img/cute.jpg" alt="Employee Image" class="employee-image">
                    <div class="employee-details">
                        <h4>Lê Thị Quỳnh Như</h4>
                        <p class="department-position">Khoa tự nhiên - Hiệu Phó</p>
                        <p class="employee-note">
                            Với thâm niên 3 năm đến nay đã có rất nhiều đóng góp cho nơi làm việc kèm theo đó là sự hoạt động nổi bật liên tục
                        </p>
                    </div>
                </div>
                <div class="contributions">
                    <h4>Những đóng góp nổi bật trong thời gian qua</h4>
                    <ul>
                        <li>Giải nhất cấp tỉnh</li>
                        <li>Tham gia hoạt động tình nguyện ở cấp phường, cấp xã và cấp địa phương</li>
                        <li>Giáo viên dạy giỏi cấp thành phố</li>
                        <li>Tham gia hoạt động tình nguyện ở cấp phường, cấp xã và cấp địa phương</li>
                    </ul>
                </div>
            </div>
            
        </div>

        <!-- Biến động nhân viên -->
        <div class="employee-movement">
            <h3>Biến động nhân viên</h3>
            <div class="movement-chart">
                <!-- Cột biểu đồ cho từng năm -->
                <div class="movement-bar">
                    <div class="bar" style="height: 40%;"></div>
                    <span class="label">2020</span>
                    <span class="value">40</span>
                </div>
                <div class="movement-bar">
                    <div class="bar" style="height: 60%;"></div>
                    <span class="label">2021</span>
                    <span class="value">60</span>
                </div>
                <div class="movement-bar">
                    <div class="bar" style="height: 30%;"></div>
                    <span class="label">2022</span>
                    <span class="value">30</span>
                </div>
                <div class="movement-bar">
                    <div class="bar" style="height: 80%;"></div>
                    <span class="label">2023</span>
                    <span class="value">80</span>
                </div>
                <div class="movement-bar">
                    <div class="bar" style="height: 50%;"></div>
                    <span class="label">2024</span>
                    <span class="value">50</span>
                </div>
            </div>
        </div>

        <!-- Tin mới cập nhật -->
        <div class="latest-updates">
            <div class="news-list">
                <h3>Tin mới cập nhật</h3>
                <ul class="news-items">
                    <li class="news-item">
                        <div class="news-icon">
                            <img src="~/Content/img/image1.png" alt="Tính năng mới">
                        </div>
                        <div class="news-content">
                            <h4>Hội thảo tháng 12 năm 2024</h4>
                            <p>Thông báo lịch tham gia hội thảo tháng 12 năm  2024</p>
                        </div>
                    </li>
                    <li class="news-item">
                        <div class="news-icon">
                            <img src="~/Content/img/image2.png" alt="thông báo tuyển dụng">
                        </div>
                        <div class="news-content">
                            <h4>Thông báo tuyển dụng</h4>
                            <p>Thông báo tuyển dụng đợt 2 nằm 2024 Trường THPT Hoàng Diệu</p>
                        </div>
                    </li>
                    <li class="news-item">
                        <div class="news-icon">
                            <img src="~/Content/img/image3.png" alt="Danh sách">
                        </div>
                        <div class="news-content">
                            <h4>Danh sách khen thưởng</h4>
                            <p>Danh sách giáo viên tiêu biểu cấp thành phố năm 2024</p>
                        </div>
                    </li>
                    <li class="news-item">
                        <div class="news-icon">
                            <img src="~/Content/img/image4.png" alt="Tính năng mới">
                        </div>
                        <div class="news-content">
                            <h4>Lịch coi thi học kì I - 2024</h4>
                            <p>Lịch coi thi tất cả các môn học kì I-2024</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </section>

</div>

