@{
    ViewBag.Title = "UpdateInfo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    @model HumanResourceManagement.Models.NhanVienModels
}


<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Css/styleinfo.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <title>HOÀNG DIỆU SCHOOL</title>
</head>
<div class="main-container">

   

    <section class="form-section">
        <div class="header-illustration">
            <h2>Cập nhật thông tin cá nhân</h2>
        </div>
        <form method="post" action="@Url.Action("UpdateInfo", "MyHome")" enctype="multipart/form-data">
            <div class="form-group">
                <div class="form-left">
                    <label for="manv">Mã nhân viên</label>
                    <input type="text" id="manv" name="MaNhanVien" value="@Model.MaNhanVien" >

                    <label for="hoten">Họ và tên</label>
                    <input type="text" id="hoten" name="HoTen" value="@Model.HoTen">

                    <label for="cccd">CCCD</label>
                    <input type="text" id="cccd" name="CCCD" value="@Model.CCCD">

                    <label for="phongban">Phòng ban</label>
                    <select id="phongban" name="MaPhongBan">
                        <option value="PB1" @(Model.MaPhongBan == "PB1" ? "selected" : "")>Khoa ngoại ngữ</option>
                        <option value="PB2" @(Model.MaPhongBan == "PB2" ? "selected" : "")>Khoa tự nhiên</option>
                    </select>

                    <label for="gioitinh">Giới tính</label>
                    <select id="gioitinh" name="GioiTinh">
                        <option value="Nam" @(Model.GioiTinh == "Nam" ? "selected" : "")>Nam</option>
                        <option value="Nữ" @(Model.GioiTinh == "Nữ" ? "selected" : "")>Nữ</option>
                    </select>

                    <label for="noisinh">Nơi sinh</label>
                    <select id="noisinh" name="DiaChi">
                        <option>@Model.DiaChi</option>
                      
                    </select>

                    <label for="dantoc">Dân tộc</label>
                    <select id="dantoc" name="DanToc">
                        <option>@Model.DanToc</option>
                       
                    </select>

                    <label for="email">Email</label>
                    <input type="email" id="email" name="Email" value="@Model.Email">
                </div>

                <div class="form-right">
                    <label for="photo">Ảnh hồ sơ (2x3)</label>
                    <div class="image-frame">
                        @if (!string.IsNullOrEmpty(Model.HinhAnh))
                        {
                            <img id="uploadedImage" src="@Url.Content(Model.HinhAnh)" alt="Xem trước ảnh">
                            <input type="hidden" name="CurrentImagePath" value="@Model.HinhAnh">
                        }
                        else
                        {
                            <img id="uploadedImage" src="@Url.Content("~/Content/img/default-avt.jpg")" alt="Ảnh mặc định">
                            <input type="hidden" name="CurrentImagePath" value="~/Content/img/default-avt.jpg">
                        }
                    </div>
                    <input class="file-img" type="file" id="uploadImage" name="uploadedImage" accept="image/*">

                    <label for="ngaysinh">Ngày sinh</label>
                    <input type="date" id="ngaysinh" name="NgaySinh" value="@Model.NgaySinh.ToString("yyyy-MM-dd")">

                    <label for="sodienthoai">Số điện thoại</label>
                    <input type="text" id="sodienthoai" name="SoDienThoai" value="@Model.SoDienThoai">

                    <label for="ngaybatdaulam">Ngày bắt đầu làm</label>
                    <input type="date" id="ngaybatdaulam" name="NgayBatDauLam" value="@Model.NgayBatDauLam.ToString("yyyy-MM-dd")">

                    <label for="trinhdo">Trình độ</label>
                    <select id="trinhdo" name="MaTrinhDo">
                        <option value="TD1" @(Model.MaTrinhDo == "TD1" ? "selected" : "")>Cử nhân</option>
                        <option value="TD2" @(Model.MaTrinhDo == "TD2" ? "selected" : "")>Thạc sĩ</option>
                    </select>

                    <label for="chucvu">Chức vụ</label>
                    <select id="chucvu" name="MaChucVu">
                        <option value="CV1" @(Model.MaChucVu == "CV1" ? "selected" : "")>Trưởng khoa ngoại ngữ</option>
                        <option value="CV2" @(Model.MaChucVu == "CV2" ? "selected" : "")>Giáo viên</option>
                        <option value="CV3" @(Model.MaChucVu == "CV3" ? "selected" : "")>Trưởng khoa tự nhiên</option>
                        <option value="CV4" @(Model.MaChucVu == "CV4" ? "selected" : "")>Trưởng bộ môn toán</option>
                    </select>

                </div>
            </div>

            <div class="form-buttons">
                <button type="submit" id="save" class="btn btn-save">Lưu<i class="fas fa-save icon-btn"></i></button>
                <button id="xoa" class="btn btn-delete">Xóa<i class="fas fa-trash-alt icon-btn"></i></button>
                <button id="huy" class="btn btn-huy" onclick="window.location.href='@Url.Action("MyHome", "MyHome")'">Hủy<i class="fa-solid fa-circle-xmark icon-btn"></i></button>
            </div>
        </form>
    </section>



    <aside class="illustration-section">
        <div class="image-wrapper">
            <img src="~/Content/img/Group 9.png" alt="Illustration" class="background-image">
        </div>
    </aside>
</div>
@Scripts.Render("~/bundles/updateInfor")
<script type="text/javascript">
    var updateInfoUrl = '@Url.Action("UpdateInfo", "MyHome")';
</script>